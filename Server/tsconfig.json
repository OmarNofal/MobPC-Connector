{
    "compilerOptions": {
      "target": "ES6",
      "allowJs": true,
      "module": "commonjs",
      "skipLibCheck": true,
      "esModuleInterop": true,
      "noImplicitAny": false,
      "sourceMap": true,
      "baseUrl": ".",
      "incremental": true,
      "outDir": "./dist",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "jsx": "react-jsx",
      "paths": {
        "*": ["node_modules/*"]
      },
    },
    "include": ["src/**/*"]
}
  